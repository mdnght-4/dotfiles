[module/bspwm]
type = internal/bspwm

label-focused = %icon%
label-focused-foreground = ${colors.background}
label-focused-background = ${xrdb:color6:#222}
label-focused-padding = 2

label-occupied = %icon% 
label-occupied-padding = 2
label-occupied-foreground = ${colors.foreground}

label-empty = %icon%
label-empty-foreground = ${xrdb:color0:#222}
label-empty-padding = 2

ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = III;爵
ws-icon-3 = IV;
ws-icon-4 = V;ﱘ

[module/date]
type = internal/date
interval = 1
format-foreground = ${colors.foreground}

date = " %Y-%m-%d "
date-alt = " %Y-%m-%d"

time = "         %I:%M %p"
time-alt = %H:%M:%S

format-prefix = "   " 
