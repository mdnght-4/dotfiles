[module/bspwm]
type = internal/bspwm

label-focused = %icon%
label-focused-foreground = ${colors.background}
label-focused-background = ${xrdb:color6:#222}
label-focused-padding = 2

label-occupied = %icon% 
label-occupied-padding = 2
label-occupied-foreground = ${colors.foreground}

label-empty = %icon%
label-empty-foreground = ${xrdb:color8:#222}
label-empty-padding = 2

ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = III;爵
ws-icon-3 = IV;
ws-icon-4 = V;ﱘ

[module/date]
type = internal/date
interval = 1
format-foreground = ${colors.foreground}

date = " %Y-%m-%d "
date-alt = " %Y-%m-%d"

format-prefix = "   " 
format-prefix-foreground = ${xrdb:color2:#222}
format-background = 
format-padding = 1

label = %date%

[module/time]
type = internal/date
interval = 1
format-foreground = ${colors.foreground}
time = "%I:%M %p"
time-alt = %H:%M:%S

format-prefix = "    " 
format-prefix-foreground = ${xrdb:color6:#222}
format-padding = 1

label = %time%

label-muted-padding = 1
[module/alsa]
type = internal/alsa
format-volume = <label-volume> <bar-volume>
label-volume = " "
label-volume-foreground = ${colors.foreground}
format-muted-foreground = ${colors.foreground}
label-muted =" ﳌ  Muted"

format-muted-padding = 2

bar-volume-width = 10
bar-volume-foreground-0 = ${xrdb:color6:#222}
bar-volume-foreground-1 = ${xrdb:color6:#222}
bar-volume-foreground-2 = ${xrdb:color6:#222}
bar-volume-foreground-3 = ${xrdb:color6:#222}
bar-volume-foreground-4 = ${xrdb:color6:#222}
bar-volume-foreground-5 = ${xrdb:color6:#222}
bar-volume-foreground-6 = ${xrdb:color6:#222}
bar-volume-gradient = false
bar-volume-indicator = 
bar-volume-indicator-foreground = ${xrdb:color6:#222} 
bar-volume-indicator-font = 2
bar-volume-fill = "━" 
bar-volume-fill-foreground = ${xrdb:color6:#222}
bar-volume-fill-font = 2
bar-volume-empty = "━"
